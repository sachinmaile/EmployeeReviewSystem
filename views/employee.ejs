<% if(locals.user){ %>
  <div class="w-75 mx-auto mt-5">
      <br />

      <div class="row">
          <div class="col-6">
              <h2>All Employees List</h2>
          </div>

          <div class="col-6 d-flex justify-content-end">
              <a href="/admin/add-employee" type="button" class="btn btn-success align-self-center">+ Add Employee</a>
          </div>
      </div>

      <% if(employes.length > 0) {%>
      <div class="mt-3 mb-3">
          <table class="table table-bordered table-striped">
              <thead class="thead-dark">
                  <tr>
                      <th scope="col">S.No.</th>
                      <th scope="col">Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Password</th>
                      <th scope="col">Admin</th>
                      <th scope="col" class="text-end">Delete</th>
                  </tr>
              </thead>

              <tbody id="myTable">
                  <% for(let i = 0; i<employes.length; i++) {%>
                  <tr>
                      <th scope="row"><%= i+1 %></th>
                      <td> <%= employes[i].name%> </td>
                      <td> <%= employes[i].email%> </td>
                      <td> <%= employes[i].password%> </td>
                      <td> <%= employes[i].isAdmin%> </td>

                      <% if(locals.user.id != employes[i]._id) {%>
                        <td style="display: flex; justify-content: space-around; align-items: center"> 
                          <a href="/admin/deleteEmployee/<%= employes[i]._id %>" class="btn btn-danger btn-small">Delete</a>
                        </td>
                      <%}else{%>
                        <td style="display: flex; justify-content: space-around; align-items: center">
                          <button type="button" class="btn btn-secondary" disabled>Delete</button>
                        </td>
                      <%}%>
                  </tr>
                  <%}%>
              </tbody>
          </table>
      </div>
      <%}else{%>
      <div class="w-75 mx-auto mt-5">
          <h2>No Records Found</h2>
      </div>
      <%}%>
  </div>
<% } else { %>
  <h1 style="font-size: 100px; padding: 100px 0; text-align: center;">Placement Cell</h1>
<% } %>
